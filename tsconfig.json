{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "lib/",
    "module": "commonjs",
    "removeComments": true,
    "target": "es5",
    "skipLibCheck": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "typings/**/*.ts"
  ],
  "exclude": [
    "coverage",
    "node_modules",
    "tests"
  ]
}
