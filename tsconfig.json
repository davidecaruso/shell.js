{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "outDir": "./lib/",
    "removeComments": true,
    "module": "CommonJS",
    "target": "ES6",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "sourceMap": false,
    "importsNotUsedAsValues": "error",
    "importHelpers": true
  },
  "exclude": [
    "coverage",
    "node_modules",
    "tests"
  ]
}
